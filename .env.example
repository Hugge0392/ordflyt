# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# Security & Authentication
SESSION_SECRET=your-strong-random-session-secret-here
PASSWORD_PEPPER=your-strong-random-pepper-here
ADMIN_PASSWORD=your-admin-password-here

# Email Service (Postmark)
POSTMARK_API_TOKEN=your-postmark-api-token
FROM_EMAIL=noreply@yourdomain.com

# Application URL (för länkar i emails)
FRONTEND_URL=https://yourdomain.com

# Azure Text-to-Speech (Valfritt)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# Environment (sätts automatiskt av Vercel)
NODE_ENV=production

# Debug (endast för utveckling)
ADMIN_DEBUG_TOKEN=your-debug-token
